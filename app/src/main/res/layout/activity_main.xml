<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView android:id="@+id/scoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:background="@android:color/white"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <FrameLayout android:id="@+id/gameFrame"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_gravity="center_horizontal">

        <ImageView android:id="@+id/player"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/balloon_right"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"/>
        
        <ImageView android:id="@+id/spaceship1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/spaceship_1"
            android:visibility="invisible"/>

        <ImageView android:id="@+id/redMarble"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/red"
            android:visibility="invisible"/>

        <ImageView android:id="@+id/blackMarble"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/missile"
            android:visibility="invisible"/>

        <ImageView android:id="@+id/shoot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shooting_missile"
            android:visibility="invisible"/>

        <ImageView android:id="@+id/laserBeam"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:src="@drawable/laser_beam"
            android:scaleType="fitXY"
            android:visibility="invisible"/>

        <ImageView android:id="@+id/laserHint"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:src="@drawable/warning_arrow"
            android:scaleType="fitXY"
            android:visibility="invisible"/>

        
        <LinearLayout android:id="@+id/gameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BalloonEspace"
                android:textSize="25sp"
                android:textColor="@android:color/white"/>
            
            <TextView android:id="@+id/highScoreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Score: 100"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="80dp"
                android:textColor="@android:color/white"/>

            <Button android:id="@+id/startGameBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="START"
                android:layout_marginTop="40dp"
                android:onClick="startGame"/>

            <Button android:id="@+id/menuBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK TO MENU"
                android:layout_marginTop="40dp"/>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>